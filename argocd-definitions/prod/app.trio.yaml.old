apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: trio-prod
  labels:
    app: trio-prod
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    namespace: trio-prod
    name: in-cluster
  project: trio
  source:
    repoURL: https://github.com/TedSpinks/gitops-demo.git
    targetRevision: openshift
    path: ./k8s-resources/trio/prod
    helm:
      parameters:
        - name: buildID
          value: argocd
      valueFiles:
        - values.yaml
  syncPolicy:
    syncOptions:
      - CreateNamespace=true
    automated:
      prune: true
